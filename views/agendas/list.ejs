<%- include("includes/header"); %>

<script>

    function confirmar(mensagem) {
        console.log(event)
        const result = confirm(mensagem);

        if (!result) {
            return false;
        }
    }

</script>

<div class="container">
    <h3>Lista de Contatos</h3>

    <div>
        <a type="button" class="btn btn-primary" href="/agendas/create/">Adicionar Tarefa</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" style="min-width: 200px">Nome</th>
                <th scope="col" style="min-width: 200px">Celular</th>
                <th scope="col" style="min-width: 200px">Email</th>
                <th scope="col" style="min-width: 200px">Rua</th>
                <th scope="col" style="min-width: 200px">Número</th>
                <th scope="col" style="min-width: 200px">Bairro</th>
                <th scope="col" style="min-width: 200px">Cidade</th>
                <th scope="col" style="min-width: 200px">Estado</th>
                <th scope="col" style="min-width: 200px">CEP</th>
                <th scope="col" style="min-width: 200px">Complemento</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>
            <% for(const agenda of agendas) { %>
            <tr class="<%= agendas.done == 1 ? 'concluido' : '' %>">
                <td><%= agenda.nome %></td>
                <td><%= agenda.celular %></td>
                <td><%= agenda.email %></td>
                <td><%= agenda.rua %></td>
                <td><%= agenda.numero %></td>
                <td><%= agenda.bairro %></td>
                <td><%= agenda.cidade %></td>
                <td><%= agenda.estado %></td>
                <td><%= agenda.cep %></td>
                <td><%= agenda.complemento %></td>
                <td>
                    <a type="button" class="btn btn-success" href="/agendas/edit/<%= agenda.id %>">Editar</a>
                    <form action="/agendas/remove/<%= agenda.id %>" method="POST" style="display: inline-block" onsubmit="return confirmar('Tem certeza que deseja excluir esse contato?')">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>

</div>

<%- include("includes/footer"); %>
